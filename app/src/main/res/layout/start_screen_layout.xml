<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_screen_race_photo"
    android:orientation="vertical"
    tools:visibility="visible">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="203dp"
        android:layout_height="91dp"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="96sp">

    </com.google.android.gms.common.SignInButton>

    <TextView
        android:id="@+id/user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="#77DF52"
        android:textSize="20dp"
        android:visibility="gone" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

<!--    <TextView-->
<!--        android:id="@+id/textView"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center"-->
<!--        android:text="Welcome Back User!"-->
<!--        android:textColor="#3F51B5"-->
<!--        android:textSize="70sp"-->
<!--        android:textStyle="bold" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mini_game_1_button"
            android:layout_width="0dp"
            android:layout_height="199dp"
            android:layout_weight="1"
            android:background="@drawable/button_image"
            android:padding="12dp"
            android:text="MiniGame1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/mini_game_2_button"
            android:layout_width="0dp"
            android:layout_height="204dp"
            android:layout_weight="1"
            android:background="@drawable/button_image"
            android:padding="12dp"
            android:text="MiniGame2"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/leaderboard_minigame1_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Leaderboard1" />

        <Button
            android:id="@+id/leaderboard_minigame2_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Leaderboard2" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
